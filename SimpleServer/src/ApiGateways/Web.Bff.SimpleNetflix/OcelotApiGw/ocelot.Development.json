{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/movie",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "movie.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/movies",
      "UpstreamHttpMethod": [
        "GET",
        "POST",
        "PUT"
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "IdentityApiKey",
        "AllowedScopes": [
          "movies"
        ]
      }
    },
    {
      "DownstreamPathTemplate": "/{path}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ],
      "UpstreamPathTemplate": "/identity/{path}",
      "UpstreamHttpMethod": [
        "GET",
        "POST",
        "PUT"
      ]
    }
  ]
}